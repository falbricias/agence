{% extends 'base.html.twig' %}

{% block body %}

    <h1>Nos logements à la vente ou à la location</h1>

    <section class="logements-list">

        {% for logement in logements %}
            <article>
                <a href="{{ path('logement_show', {'id' : logement.id}) }}">
                    <img src="" alt="{{ logement.adresse }}">
                </a>
                <p>Type : {{ logement.type }}</p>
                <p>Modalité : {{ logement.modalite }}</p>
            </article>
        {% endfor %}
    </section>

{% endblock %}

{% block title %}
    {{ parent() }} | List
{% endblock %}

